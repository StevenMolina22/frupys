---
import HomeLayout from "../layouts/HomeLayout.astro";
import WalletModal from "../components/modals/WalletModal.astro";
import BuyNowModal from "../components/modals/BuyNowModal.astro";
---

<HomeLayout>
  <main class="pt-[5.5rem] lg:pt-24">
    <!-- Page Title -->
    <section
      class="relative bg-cover bg-center bg-no-repeat py-24 after:absolute after:inset-0 after:bg-jacarta-900/60 md:py-32"
      style="background-image: url('./img/page-title/knowledge_base_banner.jpg')"
    >
      <div class="container relative z-10">
        <h1 class="text-center font-display text-4xl font-medium text-white">
          Xhibiter System Status
        </h1>
      </div>
    </section>

    <!-- Platform Status -->
    <section class="relative py-24">
      <picture class="pointer-events-none absolute inset-0 -z-10 dark:hidden">
        <img
          src="img/gradient_light.jpg"
          alt="gradient"
          class="h-full w-full"
        />
      </picture>
      <div class="container">
        <div class="mx-auto max-w-[53.125rem]">
          <div
            class="mb-16 rounded-lg bg-green p-4 font-display text-md font-medium text-white"
          >
            <span>All Systems Operational</span>
          </div>

          <!-- Table -->
          <div
            class="mb-14 divide-y divide-jacarta-100 overflow-hidden rounded-lg border border-jacarta-100 bg-white dark:divide-jacarta-600 dark:border-jacarta-600 dark:bg-jacarta-700"
          >
            <div class="flex items-center justify-between py-4 px-5">
              <span class="font-medium text-jacarta-700 dark:text-white"
                >API</span
              >
              <span class="text-green">Operational</span>
            </div>
            <div class="flex items-center justify-between py-4 px-5">
              <span class="font-medium text-jacarta-700 dark:text-white"
                >Desktop Application</span
              >
              <span class="text-green">Operational</span>
            </div>
            <div class="flex items-center justify-between py-4 px-5">
              <span class="font-medium text-jacarta-700 dark:text-white"
                >Website</span
              >
              <span class="text-green">Operational</span>
            </div>
            <div class="flex items-center justify-between py-4 px-5">
              <span class="font-medium text-jacarta-700 dark:text-white"
                >Mobile Application</span
              >
              <span class="text-orange-bright">Active Incident</span>
            </div>
            <div class="flex items-center justify-between py-4 px-5">
              <div class="flex items-center space-x-2">
                <span class="font-medium text-jacarta-700 dark:text-white"
                  >Support Services</span
                >
                <span
                  class="inline-block"
                  data-tippy-content="Setting your asset as explicit and sensitive content, like pornography and other not safe for work (NSFW) content, will protect users with safe search while browsing Xhibiter."
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="24"
                    height="24"
                    class="h-4 w-4 fill-jacarta-500 dark:fill-jacarta-300"
                  >
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path
                      d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm-1-5h2v2h-2v-2zm2-1.645V14h-2v-1.5a1 1 0 0 1 1-1 1.5 1.5 0 1 0-1.471-1.794l-1.962-.393A3.501 3.501 0 1 1 13 13.355z"
                    ></path>
                  </svg>
                </span>
              </div>
              <span class="text-green">Operational</span>
            </div>
            <div class="flex items-center justify-between py-4 px-5">
              <span class="font-medium text-jacarta-700 dark:text-white"
                >Emails</span
              >
              <span class="text-green">Operational</span>
            </div>
          </div>

          <h2
            class="mb-6 font-display text-xl text-jacarta-700 dark:text-white"
          >
            Past Incidents
          </h2>

          <div class="mb-8">
            <div
              class="mb-4 border-b border-jacarta-100 pb-4 text-lg font-medium text-jacarta-700 dark:border-jacarta-600 dark:text-white"
            >
              Apr 8, 2022
            </div>
            <p class="dark:text-jacarta-300">No incidents reported today.</p>
          </div>

          <div class="mb-8">
            <div
              class="mb-4 border-b border-jacarta-100 pb-4 text-lg font-medium text-jacarta-700 dark:border-jacarta-600 dark:text-white"
            >
              Apr 7, 2022
            </div>
            <p class="dark:text-jacarta-300">No incidents reported today.</p>
          </div>

          <div class="mb-8">
            <div
              class="mb-4 border-b border-jacarta-100 pb-4 text-lg font-medium text-jacarta-700 dark:border-jacarta-600 dark:text-white"
            >
              Apr 6, 2022
            </div>
            <p class="dark:text-jacarta-300">No incidents reported today.</p>
          </div>

          <div class="mb-8">
            <div
              class="mb-4 border-b border-jacarta-100 pb-4 text-lg font-medium text-jacarta-700 dark:border-jacarta-600 dark:text-white"
            >
              Apr 5, 2022
            </div>
            <p class="mb-4 font-medium text-orange-bright">
              Database connectivity issues
            </p>
            <div class="mb-6">
              <p class="dark:text-jacarta-300">
                <strong class="text-jacarta-700 dark:text-white"
                  >Resolved</strong
                > - This incident has been resolved.
              </p>
              <time class="text-sm dark:text-jacarta-300">Apr 5, 16:53 UTC</time
              >
            </div>
            <div class="mb-6">
              <p class="dark:text-jacarta-300">
                <strong class="text-jacarta-700 dark:text-white"
                  >In progress</strong
                > - Scheduled maintenance is currently in progress. We will provide
                updates as necessary.
              </p>
              <time class="text-sm dark:text-jacarta-300">Apr 5, 16:52 UTC</time
              >
            </div>
            <div class="mb-6">
              <p class="dark:text-jacarta-300">
                <strong class="text-jacarta-700 dark:text-white"
                  >Investigating</strong
                > - We are experiencing intermittent database connectivity issues.
                The team is currently investigating.
              </p>
              <time class="text-sm dark:text-jacarta-300">Apr 5, 16:45 UTC</time
              >
            </div>
          </div>

          <div class="mb-8">
            <div
              class="mb-4 border-b border-jacarta-100 pb-4 text-lg font-medium text-jacarta-700 dark:border-jacarta-600 dark:text-white"
            >
              Apr 4, 2022
            </div>
            <p class="dark:text-jacarta-300">No incidents reported today.</p>
          </div>

          <div
            class="mt-12 flex items-center justify-between border-t border-jacarta-100 pt-4 text-2xs dark:border-jacarta-600"
          >
            <a href="#" class="flex items-center space-x-1 text-blue">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="24"
                height="24"
                class="h-rotate h-4 w-4 fill-current"
              >
                <path fill="none" d="M0 0h24v24H0z"></path>
                <path
                  d="M7.828 11H20v2H7.828l5.364 5.364-1.414 1.414L4 12l7.778-7.778 1.414 1.414z"
                ></path>
              </svg>
              <span>Incident History</span>
            </a>
            <a
              href="https://deothemes.com"
              class="hover:text-blue dark:text-jacarta-300"
              >Powered by DeoThemes</a
            >
          </div>
        </div>
      </div>
    </section>
    <!-- end platform status -->
  </main>
  <WalletModal />
  <BuyNowModal />
</HomeLayout>
