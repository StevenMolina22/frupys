---
import WalletModal from "../components/modals/WalletModal.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import HomeLayout from "../layouts/HomeLayout.astro";
---

<HomeLayout>
  <main class="pt-[5.5rem] lg:pt-24">
    <!-- Page Title -->
    <section
      class="relative bg-cover bg-center bg-no-repeat py-32 after:absolute after:inset-0 after:bg-jacarta-900/60"
      style="background-image: url('/img/page-title/knowledge_base_banner.jpg')"
    >
      <div class="container relative z-10">
        <h1 class="text-center font-display text-4xl font-medium text-white">
          Get in touch
        </h1>
      </div>
    </section>

    <ContactSection />
  </main>

  <WalletModal />

  <script is:inline src="/js/contactForm.bundle.js"></script>
</HomeLayout>
