---
import MenuActions from "./MenuActions.svelte";
import MobileMenuActions from "./MobileMenuActions.astro";
---

<header class="fixed top-0 z-20 w-full backdrop-blur transition-colors">
  <div class="flex items-center px-6 py-6 xl:px-24">
    <a href="index.html" class="shrink-0">
      <img
        src="/img/logo-light.png"
        class="h-10 dark:hidden"
        alt="Xhibiter | NFT Marketplace"
      />
      <img
        src="/img/logo-dark.png"
        class="h-10 dark:block"
        alt="Xhibiter | NFT Marketplace"
      />
    </a>
    <MenuActions client:load/>
    <MobileMenuActions />
  </div>
</header>
