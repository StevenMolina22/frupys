---
import CoverflowCard from "../cards/CoverflowCard.astro";

interface Card {
  title: string;
  image: string;
  href: string;
  category: {
    name: string;
    image: string;
    href: string;
  };
}

const cards: Card[] = [
  {
    title: "Ice Cream 1",
    image: "/img/ice-cream/1.jpg",
    href: "item",
    category: {
      name: "Food",
      image: "/img/ice-cream/1.jpg",
      href: "user",
    },
  },
  {
    title: "Ice Cream 2",
    image: "/img/ice-cream/2.jpg",
    href: "item",
    category: {
      name: "Food",
      image: "/img/ice-cream/2.jpg",
      href: "user",
    },
  },
  {
    title: "Ice Cream 3",
    image: "/img/ice-cream/3.jpg",
    href: "item",
    category: {
      name: "Food",
      image: "/img/ice-cream/3.jpg",
      href: "user",
    },
  },
  {
    title: "Ice Cream 4",
    image: "/img/ice-cream/4.jpg",
    href: "item",
