---
const steps = [
  {
    icon: "M22 6h-7a6 6 0 1 0 0 12h7v2a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h18a1 1 0 0 1 1 1v2zm-7 2h8v8h-8a4 4 0 1 1 0-8zm0 3v2h3v-2h-3z",
    bgColor: "bg-[#CDBCFF]",
    iconBgColor: "bg-accent",
    title: "Set up your wallet",
    description: "Once you've set up your wallet of choice, connect it to OpenSeaby clicking the NFT Marketplacein the top right corner."
  },
  {
    icon: "M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z",
    bgColor: "bg-[#C4F2E3]",
    iconBgColor: "bg-green",
    title: "Create Your Collection",
    description: "Click Create and set up your collection. Add social links, a description, profile & banner images, and set a secondary sales fee."
  },
  {
    icon: "M17.409 19c-.776-2.399-2.277-3.885-4.266-5.602A10.954 10.954 0 0 1 20 11V3h1.008c.548 0 .992.445.992.993v16.014a1 1 0 0 1-.992.993H2.992A.993.993 0 0 1 2 20.007V3.993A1 1 0 0 1 2.992 3H6V1h2v4H4v7c5.22 0 9.662 2.462 11.313 7h2.096zM18 1v4h-8V3h6V1h2zm-1.5 9a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z",
    bgColor: "bg-[#CDDFFB]",
    iconBgColor: "bg-blue",
    title: "Add Your NFTs",
    description: "Upload your work (image, video, audio, or 3D art), add a title and description, and customize your NFTs with properties, stats."
  },
  {
    icon: "M10.9 2.1l9.899 1.415 1.414 9.9-9.192 9.192a1 1 0 0 1-1.414 0l-9.9-9.9a1 1 0 0 1 0-1.414L10.9 2.1zm2.828 8.486a2 2 0 1 0 2.828-2.829 2 2 0 0 0-2.828 2.829z",
    bgColor: "bg-[#FFD0D0]",
    iconBgColor: "bg-red",
    title: "List Them For Sale",
    description: "Choose between auctions, fixed-price listings, and declining-price listings. You choose how you want to sell your NFTs!"
  }
];
---

<section class="relative py-24 dark:bg-jacarta-800">
  <picture class="pointer-events-none absolute inset-0 -z-10 dark:hidden">
    <img src="/img/gradient_light.jpg" alt="gradient" class="h-full w-full" />
  </picture>
  <div class="container">
    <h2 class="mb-16 text-center font-display text-3xl text-jacarta-700 dark:text-white">
      Create and sell your NFTs
    </h2>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4">
      {steps.map((step, index) => (
        <div class="text-center">
          <div class={`mb-6 inline-flex rounded-full ${step.bgColor} p-3`}>
            <div class={`inline-flex h-12 w-12 items-center justify-center rounded-full ${step.iconBgColor}`}>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="24"
                height="24"
                class="h-5 w-5 fill-white"
              >
                <path fill="none" d="M0 0h24v24H0z"></path>
                <path d={step.icon}></path>
              </svg>
            </div>
          </div>
          <h3 class="mb-4 font-display text-lg text-jacarta-700 dark:text-white">
            {`${index + 1}. ${step.title}`}
          </h3>
          <p class="dark:text-jacarta-300">
            {step.description}
          </p>
        </div>
      ))}
    </div>

    <p class="mx-auto mt-20 max-w-2xl text-center text-lg text-jacarta-700 dark:text-white">
      Join our mailing list to stay in the loop with our newest feature
      releases, NFT drops, and tips and tricks for navigating Xhibiter
    </p>

    <div class="mx-auto mt-7 max-w-md text-center">
      <form class="relative">
        <input
          type="email"
          placeholder="Email address"
          class="w-full rounded-full border border-jacarta-100 py-3 px-4 focus:ring-accent dark:border-jacarta-600 dark:bg-jacarta-700 dark:text-white dark:placeholder-white"
        />
        <button
          class="absolute top-2 right-2 rounded-full bg-accent px-6 py-2 font-display text-sm text-white hover:bg-accent-dark"
        >
          Subscribe
        </button>
      </form>
    </div>
  </div>
</section>