---
interface Props {
    title: string;
    mainImage: string;
    subImages: string[];
    ownerAvatar: string;
    ownerName: string;
    itemCount: string;
    href?: string;
}

const {
    title,
    mainImage,
    subImages,
    ownerAvatar,
    ownerName,
    itemCount,
    href = "collection",
} = Astro.props;
---

<article>
    <div
        class="rounded-2.5xl border border-jacarta-100 bg-white p-[1.1875rem] transition-shadow hover:shadow-lg dark:border-jacarta-700 dark:bg-jacarta-700"
    >
        <a href={href} class="flex space-x-[0.625rem]">
            <span class="w-[74.5%]">
                <img
                    src={mainImage}
                    alt={title}
                    class="h-full w-full rounded-[0.625rem] object-cover"
                    loading="lazy"
                />
            </span>
            <span class="flex w-1/3 flex-col space-y-[0.625rem]">
                {
                    subImages.map((img) => (
                        <img
                            src={img}
                            alt={title}
                            class="h-full rounded-[0.625rem] object-cover"
                            loading="lazy"
                        />
                    ))
                }
            </span>
        </a>

        <a
            href={href}
            class="mt-4 block font-display text-base text-jacarta-700 hover:text-accent dark:text-white dark:hover:text-accent"
        >
            {title}
        </a>

        <div
            class="mt-2 flex items-center justify-between text-sm font-medium tracking-tight"
        >
            <div class="flex flex-wrap items-center">
                <a href="user" class="mr-2 shrink-0">
                    <img
                        src={ownerAvatar}
                        alt="owner"
                        class="h-5 w-5 rounded-full"
                    />
                </a>
                <span class="mr-1 dark:text-jacarta-400">by</span>
                <a href="user" class="text-accent">
                    <span>{ownerName}</span>
                </a>
            </div>
            <span class="text-sm dark:text-jacarta-300">{itemCount} Items</span>
        </div>
    </div>
</article>
