---
interface Props {
  src: string;
  title: string;
  color: string;
  href: string;
}

const { src, title, color, href } = Astro.props;
---

<article>
  <a
    href={href}
    class="block rounded-2.5xl border border-jacarta-100 bg-white p-[1.1875rem] transition-shadow hover:shadow-lg dark:border-jacarta-700 dark:bg-jacarta-700"
  >
    <figure class=`rounded-t-[0.625rem] bg-${color} p-4`>
      <img
        src={src}
        alt="item 1"
        class="w-[280px] rounded-[0.625rem] h-[140px] object-cover object-center"
        loading="lazy"
      />
    </figure>
    <div class="mt-4 text-center">
      <span class="font-display text-lg text-jacarta-700 dark:text-white"
        >{title}</span
      >
    </div>
  </a>
</article>
